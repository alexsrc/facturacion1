{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <style>
        .row{margin-right: 2%;
            margin-left: 2%;}
    </style>
    <h3 class="text-center"><b>Usuarios</b></h3><br>
    <div class="content">
    <div class="row text-right">
    <div class="col-md-12">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Usuario" onclick="window.location.href='{{path('registrarUsuario')}}'">Nuevo Usuario</button>
    </div>
    </div>
    </div>
    <br>
    <div class="row text-center" style="margin-right: 2%">
        {% if usuarios|length > 0%}
        <div class="col-md-12">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">Nombres</th>
                    <th scope="col">Apellidos</th>
                    <th scope="col">Telefono</th>
                    <th scope="col">Operaciones</th>

                </tr>
                </thead>
                <tbody>

            {% for usuario in usuarios %}
            <tr>
                <td>{{ usuario.nombre1 }} {{ usuario.nombre2 }}</td>
                <td>{{ usuario.apellido1 }} {{ usuario.apellido2 }}</td>
                <td>{{ usuario.telefono }}</td>
                <td>
                    <a  href="{{path('registrarUsuario',{"idUsuario":usuario.idUserPk})}}" type="button" class="btn btn-warning btn-sm" ><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                    <a  href="{{path('eliminarUsuario',{"idUsuario":usuario.idUserPk})}}" type="button" class="btn btn-danger btn-sm" ><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>


            </tr>
            {% endfor %}


        </tbody>
            </table>
        </div>
        {% else %}
            <div class="alert alert-danger text-center">
                <strong>No existen registros!</strong>
            </div>
        {% endif %}

    </div>

