{% extends 'base.html.twig' %}

{% block title %}{% endblock %}
{% block body %}
<style>
    .row{margin-right: 2%;
        margin-left: 2%;}
</style>
<h3 class="text-center"><b>Items</b></h3><br>
<div class="content">
    <div class="row text-right">
        <div class="col-md-12">
           <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Usuario" onclick="window.location.href='{{path('registrarItem')}}'">Nuevo Item</button>
        </div>
    </div>
</div>
<br>
<div class="row text-center" style="margin-right: 2%">
    {% if items|length > 0%}
        <div class="col-md-12">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Codigo Item</th>
                    <th scope="col">Valor</th>
                    <th scope="col">Iva</th>
                    <th scope="col">Operaciones</th>

                </tr>
                </thead>
                <tbody>

                {% for item in items %}
                    <tr>
                        <td>{{ item.nombreproducto }}</td>
                        <td>{{ item.codigoitem }}</td>
                        <td>{{ item.valor }}</td>
                        <td>{{ item.iva }}%</td>
                        <td>
                            <a  href="{{path('registrarItem',{"idItem":item.idItemPk})}}" type="button" class="btn btn-warning btn-sm" ><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                            <a  href="{{path('eliminarItem',{"idItem":item.idItemPk})}}" type="button" class="btn btn-danger btn-sm" ><i class="fa fa-trash" aria-hidden="true"></i></a>
                        </td>


                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="alert alert-danger text-center">
            <strong>No existen registros!</strong>
        </div>
    {% endif %}


</div>
{% endblock %}